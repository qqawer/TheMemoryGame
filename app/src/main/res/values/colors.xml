    <color name="free_gray">#9E9E9E</color>           <!-- Regular user badge (gray) -->
    
    <!-- ========== Button Colors ========== -->
    <!-- Primary Button (Blue - Login, Start Game) -->
    <color name="button_primary">#1976D2</color>
    <color name="button_primary_pressed">#1565C0</color>
    
    <!-- Secondary Button (Green - Leaderboard) -->
    <color name="button_secondary">#43A047</color>
    <color name="button_secondary_pressed">#388E3C</color>
    
    <!-- Danger Button (Red - Logout) -->
    <color name="button_danger">#E53935</color>

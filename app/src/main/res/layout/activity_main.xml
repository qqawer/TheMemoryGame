<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Main Activity Layout - English Version
    
    File path:
    app/src/main/res/layout/activity_main.xml
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".activities.MainActivity">
    
    <!-- Top User Info Area (shown only when logged in) -->
    <LinearLayout
        android:id="@+id/layoutUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- VIP/Free Badge -->
        <TextView
            android:id="@+id/tvVipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_vip_badge"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginEnd="8dp" />
        
        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    
    <!-- Game Title -->
    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory Game"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/title_color"
        app:layout_constraintTop_toBottomOf="@id/layoutUserInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />
    
    <!-- Game Subtitle -->
    <TextView
        android:id="@+id/tvGameSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Memory Game"
        android:textSize="18sp"
        android:textColor="@color/subtitle_color"
        app:layout_constraintTop_toBottomOf="@id/tvGameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
    
    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvGameSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Login Button (shown when not logged in) -->
        <Button
            android:id="@+id/btnLoginPrompt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />
        
        <!-- Start Game Button -->
        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Start Game"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            android:layout_marginBottom="16dp" />
        
        <!-- Leaderboard Button -->
        <Button
            android:id="@+id/btnLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Leaderboard"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginBottom="16dp" />
        
        <!-- Logout Button (shown when logged in) -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Logout"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_danger"
            android:visibility="gone" />
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
